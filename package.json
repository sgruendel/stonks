{
    "name": "stonks",
    "version": "1.0.0",
    "description": "Stocks and Technical Indicators using Amazon DynamoDB",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "test:unit": "export $(cat .env.local | grep -v '^#' | xargs) && c8 --reporter=lcov --reporter=text mocha test/unit/*",
        "test:integration": "mocha test/integration/*",
        "test": "npm run test:unit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sgruendel/stonks.git"
    },
    "keywords": [
        "stocks",
        "alphavantage"
    ],
    "author": "Stefan Gr√ºndel",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/sgruendel/stonks/issues"
    },
    "homepage": "https://github.com/sgruendel/stonks#readme",
    "dependencies": {
        "dayjs": "^1.11.13",
        "dynamoose": "^4.0.4",
        "node-fetch": "^3.3.2",
        "p-map": "^7.0.3",
        "p-queue": "^8.1.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "c8": "^10.1.3",
        "chai": "^5.2.0",
        "eslint": "^9.25.1",
        "eslint-config-strongloop": "^2.1.0",
        "mocha": "^11.2.2"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2023,
            "sourceType": "module"
        },
        "extends": "strongloop",
        "env": {
            "es6": true,
            "node": true,
            "mocha": true
        },
        "rules": {
            "indent": [
                "error",
                4
            ],
            "max-len": [
                "error",
                120,
                4,
                {
                    "ignoreComments": true,
                    "ignoreUrls": true,
                    "ignoreStrings": true,
                    "ignorePattern": "^\\s*var\\s.+=\\s*(require\\s*\\()|(/)"
                }
            ],
            "space-before-function-paren": 0
        }
    }
}
